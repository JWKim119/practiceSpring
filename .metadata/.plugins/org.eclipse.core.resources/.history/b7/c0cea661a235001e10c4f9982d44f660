package com.gjcompany.accountbook.home.controller;

import com.gjcompany.accountbook.home.dto.AccountDTO;
import com.gjcompany.accountbook.home.service.HomeService;
import jakarta.servlet.http.HttpSession;
import lombok.extern.log4j.Log4j2;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.*;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

@Controller
@Log4j2
public class HomeContorller {

    @Autowired
    HomeService homeService;

    @RequestMapping(value = "/")
    public String stringIndex(ModelMap modelMap) {
        return "redirect:/home/main";
    }

    @RequestMapping(value = "/index")
    public String doIndex(ModelMap modelMap) {
        Map<String, String> map = new HashMap<>();
        map.put("test", "테스트입니다.");

        modelMap.putAll(map);
        return "index";
    }

    @RequestMapping(value = "/home/main")
    public String doMain(ModelMap modelMap) {

        List<AccountDTO> list = homeService.doMain();
        modelMap.put("data", list);

        return "/contents/home/main";
    }

